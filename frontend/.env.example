# Application Configuration
VITE_APP_NAME=Appo
VITE_APP_VERSION=0.1.0
VITE_APP_ENV=development

# API Configuration
VITE_API_BASE_URL=http://localhost:8000/api
VITE_API_TIMEOUT=10000

# Authentication
VITE_JWT_SECRET=your-jwt-secret-key
VITE_TOKEN_STORAGE_KEY=appo_access_token
VITE_REFRESH_TOKEN_KEY=appo_refresh_token

# Features Flags
VITE_ENABLE_MOCKING=false
VITE_ENABLE_DEVTOOLS=true
VITE_ENABLE_LOGGING=true

# Third-party Services
VITE_SENTRY_DSN=
VITE_GOOGLE_ANALYTICS_ID=
VITE_GOOGLE_MAPS_API_KEY=

# Payment Gateway
VITE_STRIPE_PUBLIC_KEY=
VITE_PAYPAL_CLIENT_ID=

# File Upload
VITE_MAX_FILE_SIZE=5242880
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# UI Configuration
VITE_THEME_PRIMARY_COLOR=#1976d2
VITE_THEME_SECONDARY_COLOR=#dc004e
VITE_DEFAULT_LOCALE=en
